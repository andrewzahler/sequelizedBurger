<div class="bgDiv">
	<div class="container-float">
		<div class="row">
			<h1><span class="glyphicon glyphicon-king"></span></h1>
			<h1>Burger Beast <small>Crown Thyself</small> </h1>
		</div>
			<div class="row">
				<div class="col-md-6">
					<div class="col-md-4">
					</div>
					<div class="col-md-6">
						<h3>Want to Eat</h3>
						<div class="list-container">
								<ul class="list-group">
									{{#each burgers}}
										{{#unless this.devoured}}
											<li class="list-group-item oneBurger"> 
												<div class="btn-group">
												<form action="/{{this.id}}?_method=PUT" method="POST">
													<input type="hidden" name="devoured" value="true">
				      						<button type="submit" class="btn btn-primary btn-sm">Eat It!</button>
												</form>
												</div>
												{{this.burger_name}} 
											</li>
										{{/unless}}
									{{/each}}
								</ul>
							</div>
					</div>
					<div class="col-md-2">
					</div>
				</div>
				<div class="col-md-6">
					<div class="col-md-2">
					</div>
					<div class="col-md-6">
						<h3>Conquests</h3>
						<div class="list-container">
							<ul class="list-group">
								{{#each burgers}}
									{{#if this.devoured}}
										<li class="list-group-item oneBurger">
											<button type="button" class="btn btn-success btn-sm" disabled="disabled">Eaten!</button>
											{{this.burger_name}}
										</li>
									{{/if}}
								{{/each}}
							</ul>
						</div>
					</div>
					<div class="col-md-4">
					</div>
				</div>
			</div>
		<div class="row">
			<h3>Add a Burger</h3>
			<strong>Enter a burger you'd like to eat, then click "Submit."</strong>
				<form class="create-update-form" action="/" method="POST">
				  <div class="form-group">
				    <input type="text" class="addBurger" name="burger_name">
				  </div>
				  <button type="submit" class="btn btn-primary">Add Burger</button>
				</form>			
		</div>
	
</div>
</div>